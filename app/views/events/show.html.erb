  <tr>
    <th><%= t('attributes.packet')%>:</th>
    <td><%= @event.packet %></td>
  </tr>
  <tr>
    <th><%= t('attributes.stream')%>:</th>
    <td><%= @event.stream %></td>
  </tr>
  <tr>
    <th><%= t('attributes.done')%>:</th>
    <td><%= @event.done %></td>
  </tr>
  <tr>
    <th><%= t('attributes.ignore')%>:</th>
    <td><%= @event.ignore %></td>
  </tr>
  <tr>
    <th><%= t('attributes.severity')%>:</th>
    <td><%= @event.severity %></td>
  </tr>
</table>

<div class="btn-toolbar" role="toolbar">
  <%= back_link %>
  <%= edit_link(@event) %>
  <%= delete_link(@event) %>
  <%= new_link Event %>
</div>
