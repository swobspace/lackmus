<div class="container">
  <%= simple_form_for(@signature,
    html: { class: 'form-horizontal card' }) do |f| %>

    <div class="card-header">
      <%= form_legend %>
    </div>
    <div class="card-body">
      <%= f.input :signature_id
       %>
      <%= f.input :signature_info
       %>
      <%= f.input :category
       %>
      <%= f.input :severity
       %>
      <%= f.input :references
       %>
      <%= f.input :action, collection: Signature::ACTIONS, include_blank: false
       %>

      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  <% end %>
</div>
