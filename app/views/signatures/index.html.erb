<h1><%= t('controller.signatures') %></h1>

<table id="dataTable" class="table table-bordered table-striped dataTable">
<thead>
  <tr>
    <th><%= t('attributes.signature_id') %></th>
    <th><%= t('attributes.signature_info') %></th>
    <th><%= t('attributes.references') %></th>
    <th><%= t('attributes.action') %></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @signatures.each do |signature| %>
  <%= content_tag_for(:tr, signature) do %>
    <td><%= signature.signature_id %></td>
    <td><%= signature.signature_info %></td>
    <td><%= signature.references %></td>
    <td><%= signature.action %></td>
    <td class="nowrap">
      <%= show_link signature %>
      <%= edit_link signature %>
      <%= delete_link signature %>
    </td>
  <% end %>
<% end %>
</tbody>
</table>

<br />

<%= back_link %>
<%= new_link Signature %>
