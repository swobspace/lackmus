<tbody>

<% @signatures.each do |signature| %>
  <%= content_tag_for(:tr, signature) do %>
    <td><%= signature.signature_id %></td>
    <td><%= signature.signature_info %></td>
    <td><%= signature.category %></td>
    <td><%= signature.severity %></td>
    <td><%= signature.last_seen %></td>
    <td><%= signature.events_count %></td>
    <td><%= signature.action %></td>
    <td>
      <%= signature_action_link(signature) %>
    </td>
  <% end %>
<% end %>
