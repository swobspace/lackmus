<%= form_tag(create_mail_host_report_path,
    class: 'form-horizontal card') do |f| %>

  <div class="card-header">
    <legend>Create Mail for Host Events</legend>
  </div>
  <div class="card-body">

    <div class="form-group row">
      <label for="ip" class='col-sm-2 col-form-label'>Host:</label>
      <div class="col-sm-10">
	<input type="string" class="form-control" id="ip" 
	 name="ip" value="<%=@host%>" placeholder="ip address" />
      </div>
    </div>
    <div class="form-group row">
      <label for="mail_to" class='col-sm-2 col-form-label'>Mail to:</label>
      <div class="col-sm-10">
	<input type="email" class="form-control" id="mail_to" 
	 name="mail_to" placeholder="Email" value="<%=Lackmus.default_recipient%>" />
      </div>
    </div>
    <div class="form-group row">
      <label for="mail_cc" class='col-sm-2 col-form-label'>Mail cc:</label>
      <div class="col-sm-10">
	<input type="email" class="form-control" id="mail_cc" 
	 name="mail_cc" placeholder="Email" />
      </div>
    </div>
    <div class="form-group row">
      <label for="subject" class='col-sm-2 col-form-label'>Subject:</label>
      <div class="col-sm-10">
	<input type="string" class="form-control" id="subject" 
	 name="subject" placeholder="subject" />
      </div>
    </div>
    <div class="form-group row">
      <label for="message" class='col-sm-2 col-form-label'>Additional info:</label>
      <div class="col-sm-10">
	<textarea rows="5" class="form-control" id="message" name="message" ></textarea>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
	<div class="checkbox">
	  <label>
	    <%= check_box_tag "mark_done", 1, true %> <%= t('actions.marked_done') %>
	  </label>
	</div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-12">
	<%= submit_tag t('actions.submit'), :class => 'btn btn-primary' %>
	<%= cancel_button %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="form-group row">
      <div class="col-sm-12">
	<%= render partial: 'host_report', locals: {host: @host, events: @events} %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-12">
	<%= submit_tag t('actions.submit'), :class => 'btn btn-primary' %>
	<%= cancel_button %>
      </div>
    </div>
  <% end %>
</div>

