<h1> Current events for: <%= host.to_s%> </h1>

<% if @message.present? %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <p><%= @message %></p>
  </div>
<% end %>
<%= hidden_field_tag "ip", @host %>

<div class="checkbox">
  <label>
    <%= check_box_tag "checkAll" %> <%= t('actions.mark_all') %> 
  </label>
</div>
<br />

<%= render(partial: 'host_reports/event', collection: events) || "No events available" %>
